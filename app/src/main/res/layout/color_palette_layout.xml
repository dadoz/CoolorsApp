<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.view.ViewPager
        android:id="@+id/colorGridViewPagerId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.card.MaterialCardView
        android:id="@+id/colorSettingMenuCardViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:cardCornerRadius="6dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/colorUserLayoutId"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="@dimen/margin_16"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/colorUserImageViewId"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:src="@drawable/ic_atom_icon"
                    />
                <TextView
                    android:id="@+id/colorUserTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amatic_sc_bold"
                    android:textSize="36sp"
                    tools:text="User test"/>
            </LinearLayout>
            <View
                android:id="@+id/colorSettingSeparatorViewId"
                android:layout_below="@id/colorUserLayoutId"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_height="1dp"/>
            <ListView
                android:divider="@null"
                android:dividerHeight="0dp"
                android:id="@+id/colorSettingListViewId"
                android:layout_below="@id/colorUserLayoutId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>
</android.support.design.widget.CoordinatorLayout>