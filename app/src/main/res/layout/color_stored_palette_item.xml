<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/margin_8"
    android:paddingBottom="@dimen/margin_8"
    android:paddingLeft="@dimen/margin_16"
    android:paddingRight="@dimen/margin_16"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/colorStoredPaletteTitleId"
        tools:text="Title Palette"
        android:fontFamily="@font/amatic_sc_bold"
        android:textSize="26sp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_16"
        card:cardBackgroundColor="@color/colorPrimaryBlue"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/colorStoredPaletteLayoutContainerId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:background="@color/colorPrimaryBlue"
                android:layout_width="0dp"
                android:fontFamily="@font/amatic_sc_bold"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <TextView
                android:background="@color/colorAccent"
                android:layout_width="0dp"
                android:fontFamily="@font/amatic_sc_bold"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"/>
            <TextView
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:fontFamily="@font/amatic_sc_bold"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <TextView
                android:background="@color/colorPrimaryBlue"
                android:layout_width="0dp"
                android:fontFamily="@font/amatic_sc_bold"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <TextView
                android:background="@color/colorAccent"
                android:fontFamily="@font/amatic_sc_bold"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/colorStoredPaletteTimestampId"
        tools:text="at 06:10"
        android:text="at 06:10"
        android:textSize="18dp"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_gravity="end"
        android:fontFamily="@font/amatic_sc_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>